<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/screenBackgroundColor"
    tools:context=".activities.MaxApps_UnlockSettingActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="70dp">



        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/fofapps2_back"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:text="Unlock Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/facebook_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

    <FrameLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/pattern"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/fofapps2_card_shape"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageVisiblePattern"
                android:src="@drawable/fofapps2_fofapps_show"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:text="Pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pin"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:background="@drawable/fofapps2_card_shape"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageVisiblePin"
                android:src="@drawable/fofapps2_hide"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:text="Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_weight="2"
        android:id="@+id/frag_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>



</LinearLayout>
</layout>