<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logowlcome" />
        <TextView
            android:id="@+id/protect"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Protect Your Privacy"
            android:textColor="#585C60"
            android:textSize="30sp" />
        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/applock2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Free App Locker"
            android:layout_below="@+id/protect"
            android:textColor="#585C60"
            android:textSize="18sp" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadAnimLayout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/new_adil" />
       <LinearLayout
           android:id="@+id/main"
           android:visibility="visible"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_gravity="center"
               android:id="@+id/h3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/applock2"
               android:fontFamily="@font/roboto"
               android:layout_marginTop="@dimen/_30sdp"
               android:gravity="center"
               android:text="Secure your app to maintain privacy \nto lock and unlock features."
               android:textSize="18dp" />
           <LinearLayout
               android:id="@+id/buttonContinue"
               android:layout_marginTop="50dp"
               android:layout_gravity="center"
               android:layout_width="180dp"
               android:layout_height="50dp"
               android:background="@drawable/conti"
               android:orientation="horizontal">
               <TextView
                   android:layout_gravity="center"
                   android:layout_marginStart="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/applock2"
                   android:fontFamily="@font/roboto"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="Start"
                   android:textSize="22dp" />

               <ImageView
                   android:layout_gravity="center"
                   android:id="@+id/go"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="@dimen/_30sdp"
                   android:adjustViewBounds="true"
                   android:src="@drawable/animateiccon"
                   android:text="Continue" />

           </LinearLayout>


       </LinearLayout>



    </LinearLayout>
</layout>