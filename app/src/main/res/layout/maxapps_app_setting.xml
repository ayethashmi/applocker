<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/back"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fofapps2_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="TODO" />

            <TextView
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_medium"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/unlockSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/unlock" />
                        <LinearLayout
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Password Mode Setting"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More option to secure your privacy"
                                android:textColor="#63686D"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDEE1" />


                    <LinearLayout
                        android:id="@+id/themes"
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/mtheme"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:padding="5dp"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:text="Themes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select your desire theme"
                                android:textColor="#63686D"
                                android:textSize="13sp" />



                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDEE1" />
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/securitySetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/lock" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Security"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="security settings"
                                android:textColor="#63686D"
                                android:textSize="13sp" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/fingerprintLock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/fing" />
                        <LinearLayout
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:padding="5dp"
                                android:text="Fingerprint"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lock your app using fingerprints"
                                android:textColor="#63686D"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/switchOff"
                            android:src="@drawable/switch_off"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/switchOn"
                            android:src="@drawable/switch_on"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <Switch
                            android:visibility="gone"
                            android:id="@+id/fingerprintSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDEE1" />
                    <LinearLayout
                        android:id="@+id/rateUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/rateus" />
                        <LinearLayout
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Rate US"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please rate our App"
                                android:textColor="#63686D"
                                android:textSize="13sp" />


                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDEE1" />
                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/mshare" />
                        <LinearLayout
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Share"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share app with your fellows"
                                android:textColor="#63686D"
                                android:textSize="13sp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>