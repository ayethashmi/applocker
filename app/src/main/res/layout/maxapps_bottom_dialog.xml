<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="290dp">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active the Fingerprint"
        android:textColor="#29292F"
        android:textSize="29dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/download"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">
        <ImageView
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:src="@drawable/mfinger"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Use Fingerprint to unlock"
            android:textColor="#A7ABAE"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/switchoff"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:src="@drawable/off"
            android:layout_margin="8dp"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/switchon"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:src="@drawable/on"
            android:layout_margin="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/uploadLinearLaySout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/exitno"
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:visibility="gone"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cancel"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#545555"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/exityes"
                android:id="@+id/enable"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:visibility="gone"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Enable"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="90dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>