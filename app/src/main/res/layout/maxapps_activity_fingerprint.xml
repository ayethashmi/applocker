<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical"
        android:background="@color/white"
    >

        <RelativeLayout
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/white" />

            <TextView
                android:fontFamily="@font/roboto_medium"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingerprint Setting"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </RelativeLayout>

 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:background="#E5E8EB"
            android:padding="20dp"
            android:weightSum="3">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/fing"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:fontFamily="@font/roboto_medium"
                android:padding="2dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:text="Fingerprint Lock"
                android:textColor="#043D76"
                android:textSize="18sp" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/switchOff"
                android:src="@drawable/off"
                android:layout_width="40dp"
                android:layout_height="50dp"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/switchOn"
                android:src="@drawable/on"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <Switch
                android:visibility="gone"
                android:id="@+id/fingerprintSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>




    </LinearLayout>
</layout>
