<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".IntruderSelfieActivity">

        <RelativeLayout
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/white" />

            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intuder Selfie Setting"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/intruder_bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/intruderselfie" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intruder Selfie"
                    android:textColor="@color/black" />

                <TextView
                    android:fontFamily="@font/roboto"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep On Selfie For Security"
                    android:textSize="15sp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/intruderSelfieoff"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:src="@drawable/off" />
            <ImageView
                android:id="@+id/intruderSelfieon"

                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/on" />

            <Switch
                android:visibility="gone"
                android:id="@+id/intruderSelfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>
        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/timerset"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/intruder_bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Take Selfie When \nthe Password is Wrong "
                android:textColor="#595D61" />

            <TextView
                android:id="@+id/time"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Times"
                android:textSize="18dp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</layout>
