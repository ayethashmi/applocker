<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:src="@drawable/logowlcome" />
        <TextView
            android:id="@+id/protect"
             android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Protect Your Privacy"
            android:textColor="#585C60"
            android:textSize="32sp" />
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/applock2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Free App Locker"
            android:layout_below="@+id/protect"
            android:textColor="#585C60"
            android:textSize="18sp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/applock2"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:text="Secure your app to maintain privacy \nto lock and unlock features."
            android:textSize="20dp" />

        <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/buttonContinue"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/h3"
            android:layout_marginStart="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/mstartbttn"
            android:text="Continue" />


        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/animateiccon"
                    android:visibility="gone" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="By tapping continue, You indicate that you have read."
                android:textSize="13sp"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>
</layout>