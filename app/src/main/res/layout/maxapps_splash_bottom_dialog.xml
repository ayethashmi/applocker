<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="240dp">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active the Fingerprint"
        android:textColor="#29292F"
        android:textSize="25dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/download"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">
        <ImageView
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/mfinger"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Use Fingerprint to unlock"
            android:textColor="#696A6B"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/switchonn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/on"
            android:layout_margin="8dp"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/switchooff"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/off"
            android:layout_margin="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/uploadLinearLaySout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/mcancel"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_width="200dp"
            android:layout_height="39dp">


            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="NO AND CONTINUE"
                android:textSize="13dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#010101"
                />
        </RelativeLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/menable"
            android:gravity="center"
            android:background="@drawable/button"
            android:layout_width="200dp"
            android:layout_height="39dp">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="YES AND CONTINUE"
                android:textSize="13dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>