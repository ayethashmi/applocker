<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentView"
        android:background="@color/purple_200">
        <ImageView
            android:layout_marginTop="40dp"
            android:visibility="visible"
            android:id="@+id/highlighone"
            android:adjustViewBounds="true"
            android:src="@drawable/onehighlight"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:id="@+id/highlighBoth"
            android:adjustViewBounds="true"
            android:src="@drawable/onetwo"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/lockBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/fingerPrintDefaultIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/fofapps2_finger_white" />
        <ImageView
            android:visibility="gone"
            android:src="@drawable/fofapps2_red_fingerprint"
            android:id="@+id/fingerPrintErrorIcon"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:src="@drawable/fofapps2_green_fingerprint"
            android:id="@+id/fingerprintGreenIcon"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>







        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:visibility="visible"

                />



            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/displayDelayCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Wait 15 Second"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/displayHeader"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Enter passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/dotLayout"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewInActiveOne"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_in_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageViewActiveOne"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_fofapps_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:id="@+id/imageViewInActiveTwo"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_in_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView

                    android:visibility="gone"
                    android:id="@+id/imageViewActiveTwo"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_fofapps_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:id="@+id/imageViewInActiveThree"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_in_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageViewActiveThree"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_fofapps_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <ImageView
                    android:id="@+id/imageViewInActiveFour"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_in_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageViewActiveFour"
                    android:layout_margin="2dp"
                    android:src="@drawable/fofapps2_fofapps_active_dot"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buttonOne"
                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"
                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"

                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="1"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonTwo"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="2"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonThree"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="3"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buttonFour"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="4"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonFive"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="5"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonSix"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="6"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buttonSeven"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"

                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="7"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonEight"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="8"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonNine"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"


                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="9"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:id="@+id/buttonForgot"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:text="Forgot"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buttonZero"

                        android:layout_width="@dimen/key_number_width"
                        android:layout_height="@dimen/key_number_height"

                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:background="@drawable/fofapps2_circle_button_shape"
                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:tag="0"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/key_number_size"
                        android:textStyle="bold" />

                    <TextView
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/baseline_close_24"
                        android:visibility="visible"
                        android:id="@+id/buttonClear"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/key_pad_margin_top"
                        android:layout_marginEnd="@dimen/key_pad_margin_end"
                        android:layout_marginBottom="@dimen/key_pad_margin_bottom"
                        android:layout_marginStart="@dimen/key_pad_margin_start"                        android:gravity="center"
                        android:onClick="buttonClick"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>